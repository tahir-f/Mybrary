<h2 class="page-header">New Book</h2>
<!-- Using enctype="multipart/form-data" so it knows our form will send multipart data which can be a file -->
<form action="/books" method="POST" >
<!-- not using input tags directly because these inputs will be shared between pages -->
    <%- include('_form_fields')  %>
<div class="form-row form-row-end btn-row">
    <a href="/books" class="btn btn-danger">Cancel</a>
    <button type="submit" class="btn btn-primary">Create</button>
</div>
</form>